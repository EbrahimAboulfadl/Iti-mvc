@model Course
@{
    SelectList deptList = new SelectList(ViewBag.departments, "DepartmentId", "DepartmentName");
}
<h1>Add New Course</h1>
<form method="post" asp-action="New">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="badge badge-danger"></span>

        </div>
        <div class="form-group col-md-6">
            <label asp-for="Grade"></label>
            <input asp-for="Grade" type="number" step="0.01" class="form-control">
            <span asp-validation-for="Grade" class="badge badge-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MinGrade"></label>
        <input asp-for="MinGrade" type="number" step="0.01" class="form-control">
        <span asp-validation-for="MinGrade" class="badge badge-danger"></span>

    </div>
        <label asp-for="DepartmentId">Department</label>
        <select asp-items="deptList" asp-for=DepartmentId class="form-control">
            <option value="-1 ">-- Select An Option --</option>
        </select>
    <span asp-validation-for="DepartmentId" class="text-danger"></span>

    <br/>
    <button type="submit" class="btn btn-success">Add Course</button>
</form>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}