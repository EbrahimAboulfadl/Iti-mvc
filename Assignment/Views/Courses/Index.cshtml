@model List<Course>
@{
    ViewData["Title"] = "Courses";
}
<div class="container">
    <div class="row align-items-start">
        <h1 class="col-10">Courses</h1>
        <a  class=" col btn btn-success" asp-action ="New">New Course</a>
    </div>
</div>

<table class="table table-border table-hover">
    <tr>
        <th>Course Name</th>
        <th>Grade</th>
        <th>Min Grade</th>
        <th>Dpartment Name</th>


    </tr>
    @foreach (var course in Model)
    {
        <tr>
            <td>@course.Name</td>
            <td>@course.Grade</td>
            <td>@course.MinGrade</td>
            <td>@course.Department.Name</td>
            <td><a asp-action ="Edit" asp-route-id ="@course.Id" class="btn btn-light">Edit</a>
                <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>

    }
</table>
