@model List<DepartmentSelectionViewModel>
<h1>Add New Instructor</h1>
<form action="/Instructors/SaveInstuctor">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputName">Name</label>
            <input  name ="name" class="form-control" id="inputName" placeholder="Instructor Name">
        </div>
        <div class="form-group col-md-6">
            <label for="inputSalary">Salary</label>
            <input name="salary" type="number" class="form-control" id="inputSalary" placeholder="Salary">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress">Address</label>
        <input  name ="address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputDepartmenet">Department</label>
            <select name="departmentId" id="inputDepartmenet" class="form-control">
                <option hidden disabled selected> -- select an option -- </option>
                @foreach (var dept in Model)
                {
                    <option value=@dept.DepartmentId>@dept.DepartmentName</option>
                }
              
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add Instructor</button>
</form>