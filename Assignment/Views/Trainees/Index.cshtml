@model List<Trainee>
@{
    ViewData["Title"] = "Trainees";
}
<div class="container">
    <div class="row align-items-start">
        <h1 class="col-10">Trainees</h1>
        <a  class=" col btn btn-success" href="/Trainees/NewTrainee">New Trainee</a>
    </div>
</div>
<table class="table table-border table-hover">
    <tr>
        <th>Id</th>
        <th> Name</th>
        <th>Department</th>
        <th>Address</th
    </tr>
    @foreach (var trainee in Model)
    {
        <tr>
            <td>@trainee.Id</td>
            <td>@trainee.Name</td>
            <td>@trainee.Department.Name</td>
            <td>@trainee.Address</td>
            <td><a href="/trainees/edittrainee/@trainee.Id" class="btn btn-light">edit</a> <a href="/trainees/deleteTrainee/@trainee.Id" class="btn btn-danger">Delete</a></td>

        </tr>

    }


</table>
